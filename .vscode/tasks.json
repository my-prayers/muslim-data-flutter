{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flutter: Test Coverage",
            "type": "shell",
            "command": "flutter test --coverage --concurrency=1 && lcov --remove coverage/lcov.info '**/*.g.dart' -o coverage/lcov.info",
        },
        {
            "label": "Flutter: Pub Get",
            "type": "shell",
            "command": "flutter pub get",
        },
        {
            "label": "Version: Bump",
            "type": "shell",
            "command": "sh scripts/bump_version.sh",
        },
    ]
}
